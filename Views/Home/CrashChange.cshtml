                        <select asp-for="LocationID">
                            <option value="">Select a Location</option>
                            @foreach (Location l in ViewBag.Location)
                            {
                                <option value="@l.LocationID">@l.RoadName - @l.City</option>
                            }
                        </select>
                    </td>
                </tr>
                <tr><td><label asp-for="WorkZone">Workzone Related</label></td><td><select asp-for="WorkZone"><option value="false">False</option><option value="true">True</option></select></td></tr>
