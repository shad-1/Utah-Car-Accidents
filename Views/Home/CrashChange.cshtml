                <tr><td><label asp-for="ImproperRestraint">Improper Restraint:</label></td><td><select asp-for="ImproperRestraint"><option value="false">False</option><option value="true">True</option></select></td></tr>
                <tr><td><label asp-for="Unrestrained">Unrestrained:</label></td><td><select asp-for="Unrestrained"><option value="false">False</option><option value="true">True</option></select></td></tr>
                <tr><td><label asp-for="Dui">DUI:</label></td><td><select asp-for="Dui"><option value="false">False</option><option value="true">True</option></select></td></tr>
                <tr><td><label asp-for="Intersection">Intersection Related:</label></td><td><select asp-for="Intersection"><option value="false">False</option><option value="true">True</option></select></td></tr>
                <tr><td><label asp-for="WildAnimal">Wild Animal Related:</label></td><td><select asp-for="WildAnimal"><option value="false">False</option><option value="true">True</option></select></td></tr>
                <tr><td><label asp-for="DomesticAnimal">Animal Related:</label></td><td><select asp-for="DomesticAnimal"><option value="false">False</option><option value="true">True</option></select></td></tr>
                <tr><td><label asp-for="Rollover">Overturn Rollover:</label></td><td><select asp-for="Rollover"><option value="false">False</option><option value="true">True</option></select></td></tr>
                <tr><td><label asp-for="Commercial">Commercial Morot Vehicle Involved:</label></td><td><select asp-for="Commercial"><option value="false">False</option><option value="true">True</option></select></td></tr>
                <tr><td><label asp-for="Teenage">Teenage Driver Involved:</label></td><td><select asp-for="Teenage"><option value="false">False</option><option value="true">True</option></select></td></tr>
                <tr><td><label asp-for="Older">Older Driver Involved:</label></td><td><select asp-for="Older"><option value="false">False</option><option value="true">True</option></select></td></tr>
                <tr><td><label asp-for="Night">Night Dark Condition:</label></td><td><select asp-for="Night"><option value="false">False</option><option value="true">True</option></select></td></tr>
                <tr><td><label asp-for="SingleVehicle">Single Vehicle:</label></td><td><select asp-for="SingleVehicle"><option value="false">False</option><option value="true">True</option></select></td></tr>
                <tr><td><label asp-for="Distracted">Distracted Driving:</label></td><td><select asp-for="Distracted"><option value="false">False</option><option value="true">True</option></select></td></tr>
                <tr><td><label asp-for="Drowsy">Drowsy Driving:</label></td><td><select asp-for="Drowsy"><option value="false">False</option><option value="true">True</option></select></td></tr>
                <tr><td><label asp-for="RoadwayDeparture">Roadway Departure:</label></td><td><select asp-for="RoadwayDeparture"><option value="false">False</option><option value="true">True</option></select></td></tr>
            </tbody>
        </table>
        <button type="submit">Submit</button>
    </form>



