@{
    ViewData["Title"] = "Delete a Crash";
}

@model YeetCarAccidents.Models.Crash;
<head>
    <!--Content security policy header-->
    <meta http-equiv="Content-Security-Policy"
            content="default-src 'self';
script-src 'report-sample' 'self' https://cdn.polyfill.io/v2/polyfill.min.js;
style-src 'report-sample' 'self';
object-src 'none';
base-uri 'self';
connect-src 'self' https://app.launchdarkly.com https://clientstream.launchdarkly.com https://events.launchdarkly.com,
font-src 'self';
frame-src 'self';
img-src 'self' data:;
manifest-src 'self';
media-src 'self';
report-uri https://62505347a340fe1bf24b25a4.endpoint.csper.io/?v=1;
worker-src 'none'" ;
            upgrade-insecure-requests;">

</head>
<h2>Delete Confirmation</h2>
<h3>Are you sure you want to delete the record for the crash on @Model.DateTime </h3>
@* at @Model.Location.RoadName in @Model.Location.City *@

<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="Admin" class="btn btn-primary">Cancel</a>
    <input type="hidden" asp-for="@Model.CrashId" />
</form>
