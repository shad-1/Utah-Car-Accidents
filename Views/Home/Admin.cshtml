@{
    ViewData["Title"] = "Admin";
}
@model List<Crash>

<head>
    <!--Content security policy header-->
    <meta http-equiv="Content-Security-Policy"
            content="default-src 'self';
script-src 'report-sample' 'self' https://cdn.polyfill.io/v2/polyfill.min.js;
style-src 'report-sample' 'self';
object-src 'none';
base-uri 'self';
connect-src 'self' https://app.launchdarkly.com https://clientstream.launchdarkly.com https://events.launchdarkly.com,
font-src 'self';
frame-src 'self';
img-src 'self' data:;
manifest-src 'self';
media-src 'self';
report-uri https://62505347a340fe1bf24b25a4.endpoint.csper.io/?v=1;
worker-src 'none'" ;
            upgrade-insecure-requests;">

</head>
<a asp-controller="Home" asp-action="CrashChange" class="btn btn-primary">Add</a>

<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <th>Severity</th>
            <th>DateTime</th>
            <th>Road Name</th>
            <th>City</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var c in Model)
            {
        <tr>
            <td>@c.Severity</td>
            <td>@c.DateTime</td>
            <td>@c.Location.RoadName</td>
            <td>@c.Location.City</td>
            <td><a asp-controller="Home" asp-action="Edit" asp-route-crashid="@c.CrashId" class="btn btn-info">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Details" asp-route-crashid="@c.CrashId" class="btn btn-warning">Details</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-crashid="@c.CrashId" class="btn btn-danger">Delete</a></td>
            <td><a asp-controller="Home" asp-action="MapCrash" asp-route-crashid="@c.CrashId">Map</a></td>

        </tr>
            }
    </tbody>
</table>

